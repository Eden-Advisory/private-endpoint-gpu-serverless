# S3 Configuration
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_ENDPOINT_URL_S3=your_s3_endpoint
AWS_ENDPOINT_URL_IAM=your_s3_iam_endpoint
AWS_REGION=auto

# S3 Configuration
S3_BUCKET=your-document-bucket
S3_PREFIX=input/documents/
S3_OUTPUT_PREFIX=processed/

# Ollama Configuration
OLLAMA_ENDPOINT=http://localhost:11434
OLLAMA_MODEL=llama3.2-vision
OLLAMA_TEMPERATURE=0

# Processing Configuration
BATCH_SIZE=50
MAX_CONCURRENT_BATCHES=4
RETRY_ATTEMPTS=3
RETRY_DELAY=5

# Resource Limits
MEMORY_LIMIT=8G
MAX_CPU_CORES=4
TIMEOUT_PER_DOC=300

# Output Configuration
OUTPUT_DIR=./output
LOG_LEVEL=INFO
ENABLE_DEBUG_MODE=false

# Cost Tracking
COST_PER_DOC=0.006
CURRENCY=USD

# Performance Tuning
CHUNK_SIZE=8192
CONNECTION_TIMEOUT=30
READ_TIMEOUT=60

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080

# Security (Optional)
OLLAMA_API_KEY=your_api_key_here
SSL_VERIFY=true
SSL_CERT_PATH=/path/to/cert.pem